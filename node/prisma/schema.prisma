model stocks {
  id     Int    @id @default(autoincrement()) // id integer primary key autoincrement
  name   String @unique // name nverchar(32) not null unique
  amount Int // amount integer check(amount >= 0 and typeof(amount) = 'integer')
  sales  Int    @default(0) // sales integer default 0
}
